{
  "extends": "react-app",
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules"  : {
    "space-before-function-paren": [
      "error",
      {
        "anonymous" : "never",
        "named"     : "never",
        "asyncArrow": "never"
      }
    ],
    "camelcase": "off",
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "always"]
  }
}